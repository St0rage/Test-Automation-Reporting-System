<%- include('../partial/header', {projects, activeProject, activeScenario}) %>

<div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <div
            class="d-flex justify-content-between align-items-center"
          >
            <div class="card-title">Settings</div>    
          </div>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="row d-flex justify-content-between">
                    <div class="col-5">
                        <form action="/change-report-logo" method="post" enctype="multipart/form-data" id="report-logo-form" class="need-validation" novalidate>
                            <div class="mb-3">
                                <label for="formFile" class="form-label fw-bolder text-dark">Change Report Logo</label>
                                <input class="form-control <%= reportLogoError ? "is-invalid" : "" %>" type="file" name="logo" id="formFile">
                                <div class="invalid-feedback" id="formFeedback"> 
                                    <%= reportLogoError %>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                        </form>
                    </div>
                    <div class="col-5">
                        <span class="fw-bolder text-dark">Current Report Logo</span>
                        <div class="pt-2">
                          <img src="/public/img/report-logo.png" class="img-fluid w-50" alt="...">
                        </div>
                        <div class="pt-2">
                          <span class="text-dark">Optimal Report Logo Dimensions  1024 x 297 Pixel</span>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>   
      </div>
    </div>
  </div>

  <% fileRecords = [{}] %>

  <%- include('../partial/footer'), {fileRecords} %>